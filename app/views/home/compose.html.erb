
        <div class="container">

                <h3 class="title">Email sender</h3>
                <p align="left"> <%= link_to 'Logout',logout_path %></p>
                <div class= "flash-messages" >
                <p class="notice"><%= notice %></p>
                <p class="alert"><%= alert %></p>
                </div>
                <%= form_for :mail_details, url:send_path do |f| %>
                <%= f.label :email, "To :-" %>
                <br/><%= f.email_field :email%><br/><br/>
                <%= f.label :subject, "Subject :-" %>
                <br/><%= f.text_field :subject, value: 'default'%><br/><br/>
                <%= f.label :body, "Body :-" %>
                <%= f.cktext_area :body %>
                <%= f.label :count, 'Count :- ' %>
                <br/><%= f.text_field :count %><br/><br/>
                
                <%= f.submit 'send', class: "btn-success" %>
                <% end %> 
        </div>
